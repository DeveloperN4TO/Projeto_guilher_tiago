<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.register.Register3Fragment">

    <LinearLayout
        android:id="@+id/containerToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CADASTRO"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:gravity="center"
            android:layout_gravity="center" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/register_completed_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/containerToolbar"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/nike2"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/register_completed_txt"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/register_completed_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="29dp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="Cadastro Realizado com Sucesso"
        android:textAlignment="center"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/description_txt"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/register_completed_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/poppins"
        android:text="Bem Vindo(a) Nike!!"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/BtnFinishRegister"
        android:layout_width="335dp"
        android:layout_marginBottom="90dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/description_txt"
        android:layout_marginTop="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/background_button"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/roboto_bold"
        android:text="confirmar"
        />

</androidx.constraintlayout.widget.ConstraintLayout>